[Unit]
Description=gaiacli
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=gaiad
Group=gaiad
PermissionsStartOnly=true
ExecStart=/usr/bin/gaiacli rest-server --laddr {{GAIACLI_ADDRESS}} --chain-id {{TESTNET_NAME}}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target

